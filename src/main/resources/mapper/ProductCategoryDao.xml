<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zdh.o2o.dao.ProductCategoryDao">
    <select id="queryProductCategoryList" resultType="cn.zdh.o2o.entity.ProductCategory"
            parameterType="Long">
        SELECT * FROM tb_product_category WHERE shop_id = #{shopId} ORDER BY priority DESC
    </select>
</mapper>